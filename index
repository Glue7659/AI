<body>
    <div class="container">
        <h1>Faiz Hesaplama Aracı</h1>
        
        <label for="principal">Anapara (TL):</label>
        <input type="text" id="principal" placeholder="Ör: 1.000.000" oninput="formatInput(this); updateNonInterest()">

        <label for="bankSelect">Bankayı Seçin:</label>
        <select id="bankSelect" onchange="updateNonInterest()">
            <option value="odeabank">Odeabank</option>
            <option value="teb">TEB Bank</option>
        </select>

        <label for="nonInterest">Vadesiz Tutar (TL) <span class="small-text">(Sadece Günlük Faiz Hesabında Düşülür)</span>:</label>
        <input type="text" id="nonInterest" placeholder="Vadesiz Tutarı Gösterilecek" readonly>

        <button onclick="calculateInterest()">Faiz Hesapla</button>

        <div id="result" class="result"></div>
        
        <table class="comparison-table">
            <thead>
                <tr>
                    <th>Tutar Aralığı (TL)</th>
                    <th>Odeabank Faiz Oranı</th>
                    <th>TEB Bank Faiz Oranı</th>
                    <th>Vadesiz Alt Limit (TL)</th>
                </tr>
            </thead>
            <tbody id="comparisonTableBody"></tbody>
        </table>

        <div class="info">
            <p><strong>Not:</strong> <em>Vadesiz Tutar, yalnızca günlük faiz hesabı yapılırken dikkate alınacaktır. Normal faiz hesaplamasında yer almaz.</em></p>
        </div>
    </div>

    <script>
        const odeabankLimits = [
            { min: 0, max: 25000, nonInterest: 7500, rate: 52 },
            { min: 25001, max: 50000, nonInterest: 7500, rate: 52 },
            { min: 50001, max: 100000, nonInterest: 10000, rate: 52 },
            { min: 100001, max: 250000, nonInterest: 20000, rate: 52 },
            { min: 250001, max: 500000, nonInterest: 40000, rate: 41 },
            { min: 500001, max: 750000, nonInterest: 75000, rate: 40 },
            { min: 750001, max: 1000000, nonInterest: 125000, rate: 40 },
            { min: 1000001, max: 2000000, nonInterest: 200000, rate: 40 },
            { min: 2000001, max: 5000000, nonInterest: 300000, rate: 35 },
            { min: 5000001, max: 10000000, nonInterest: 500000, rate: 13.5 }
        ];

        const tebLimits = [
            { min: 0, max: 5000, nonInterest: 0, rate: 0 },
            { min: 5001, max: 9999, nonInterest: 5000, rate: 53 },
            { min: 10000, max: 24999, nonInterest: 5000, rate: 53 },
            { min: 25000, max: 49999, nonInterest: 5000, rate: 53 },
            { min: 50000, max: 99999, nonInterest: 7500, rate: 53 },
            { min: 100000, max: 249999, nonInterest: 15000, rate: 53 },
            { min: 250000, max: 499999, nonInterest: 30000, rate: 53 },
            { min: 500000, max: 749999, nonInterest: 50000, rate: 53 },
            { min: 750000, max: 1000000, nonInterest: 50000, rate: 53 },
            { min: 1000001, max: 1500000, nonInterest: 125000, rate: 53 },
            { min: 1500001, max: 2000000, nonInterest: 150000, rate: 53 },
            { min: 2000001, max: 3000000, nonInterest: 200000, rate: 53 },
            { min: 3000001, max: 4000000, nonInterest: 250000, rate: 53 },
            { min: 4000001, max: Infinity, nonInterest: 0, rate: 0 }
        ];

        function formatInput(input) {
            const value = input.value.replace(/\D/g, '');
            input.value = new Intl.NumberFormat('tr-TR').format(value);
        }

        function parseInput(input) {
            return parseFloat(input.value.replace(/\./g, '')) || 0;
        }

        function updateNonInterest() {
            const principal = parseInput(document.getElementById('principal'));
            const bank = document.getElementById('bankSelect').value;
            const selectedLimits = bank === 'odeabank' ? odeabankLimits : tebLimits;

            let nonInterestAmount = 0;
            for (const range of selectedLimits) {
                if (principal >= range.min && principal <= range.max) {
                    nonInterestAmount = range.nonInterest;
                    break;
                }
            }

            document.getElementById('nonInterest').value = new Intl.NumberFormat('tr-TR').format(nonInterestAmount);
            updateComparisonTable(principal, bank);
        }

        function updateComparisonTable(principal, bank) {
            const selectedLimits = bank === 'odeabank' ? odeabankLimits : tebLimits;
            const comparisonTableBody = document.getElementById('comparisonTableBody');

            comparisonTableBody.innerHTML = '';

            for (const range of selectedLimits) {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${new Intl.NumberFormat('tr-TR').format(range.min)} - ${new Intl.NumberFormat('tr-TR').format(range.max)} TL</td>
                    <td>${range.rate}%</td>
                    <td>${range.rate}%</td>
                    <td>${new Intl.NumberFormat('tr-TR').format(range.nonInterest)} TL</td>
                `;
                comparisonTableBody.appendChild(row);
            }
        }

        function calculateInterest() {
            const principal = parseInput(document.getElementById('principal'));
            const bank = document.getElementById('bankSelect').value;
            const selectedLimits = bank === 'odeabank' ? odeabankLimits : tebLimits;
            const resultElement = document.getElementById('result');

            let applicableRate = 0;
            let nonInterestAmount = 0;
            
            for (const range of selectedLimits) {
                if (principal >= range.min && principal <= range.max) {
                    applicableRate = range.rate;
                    nonInterestAmount = range.nonInterest;
                    break;
                }
            }

            const interestAmount = principal * (applicableRate / 100);
            const totalAmount = principal + interestAmount - nonInterestAmount;

            resultElement.innerHTML = `
                <p><strong>Uygulanan Faiz Oranı:</strong> ${applicableRate}%</p>
                <p><strong>Faiz Tutarı:</strong> ${new Intl.NumberFormat('tr-TR').format(interestAmount)} TL</p>
                <p><strong>Vadesiz Tutar (Düşülen):</strong> ${new Intl.NumberFormat('tr-TR').format(nonInterestAmount)} TL</p>
                <p><strong>Toplam Tutar:</strong> ${new Intl.NumberFormat('tr-TR').format(totalAmount)} TL</p>
            `;
        }
    </script>
</body>
</html>
